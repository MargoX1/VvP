#include <stdio.h>

float PowerA3(float A)
{
	float B = A * A * A;
	return B;
}

int Sign(float X)
{
	if (X < 0)
		return -1;
	if (X == 0)
		return 0;
	if (X > 0)
		return 1;

}

float RingS(float R1, float R2)
{
	float S = 3.14 * (R1 * R1 - R2 * R2);
	return S;
}

int Quarter(float x, float y)
{
	if (x > 0 && y > 0)
		printf("1 quarter\n");
	if (x < 0 && y > 2)
		printf("2 quarter\n");
	if (x < 0 && y < 0)
		printf("3 quarter\n");
	if (x > 0 && y < 0)
		printf("4 quarter\n");
	return 0;
}

float Fact2(int N)
{
	int fact = 1;
	if (N % 2 != 0)
	{
		for (int i = 1; i <= N; i += 2)
			fact *= i;
	}
	else
	{
		for (int i = 2; i <= N; i += 2)
			fact *= i;
	}
	return fact;
}

